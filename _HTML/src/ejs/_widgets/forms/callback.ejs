<%
	/**
	 * @name forms/callback.ejs */

	// Выгружаем инструменты
	const {FormInput, FormTextarea, Button} = app.el;
%>
<div class="title title--size-h3">Callback</div>
<form class="form js-init" method="post" data-ajax="./hidden/response/demo.json">
	<div class="form-group">
		<%- new FormInput({
			type: 'email',
			placeholder: 'email',
			name: 'email'
		}) %>
	</div>

	<div class="form-group">
		<%- new FormInput.PhoneMask({
			value: '+380',
			placeholder: 'phone mask',
			name: 'phone-mask'
		}) %>
	</div>

	<div class="form-group">
		<%- new FormTextarea({
			placeholder: 'message',
			name: 'message',
			dataRuleMinlength: 20
		}) %>
	</div>

	<div class="form-group">
		<%- new Button.Submit() %>
		<%- new Button.Reset() %>
	</div>
</form>
