	<div class="container">
		<%- _title('anchor-accordion', 'accordion') %>
		<div class="grid grid--1 grid--md-2 grid--space-def">
			<div class="gcell">
				<div class="title title--size-h4">single</div>
				<%- app.widget('ui/accordion.ejs', {ns: 'accordion-example-single', openActive: false}) %>
			</div>
			<div class="gcell">
				<div class="title title--size-h4">multiple</div>
				<%- app.widget('ui/accordion.ejs', {ns: 'accordion-example-multiple', type: 'multiple', openActive: false}) %>
