	</div>
</div>

<div class="section _ptb-lg" id="anchor-magnific-popup">
	<div class="container">
		<%- _title('anchor-magnific-popup', 'magnific popup') %>
		<%- app.widget('ui-demo/magnific-popup.ejs') %>
